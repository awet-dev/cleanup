{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}

    <div class="mx-auto my-5 w-50 border rounded p-5">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <legend class="d-flex justify-content-center align-items-center gap-2 mb-3">
            <i class="fa-solid fa-hand-sparkles"></i>
            <span>Contact</span>
        </legend>

        {{ form_start(contactForm) }}
        {{ form_errors(contactForm) }}

        {{ form_row(contactForm.name) }}
        {{ form_row(contactForm.email) }}
        {{ form_row(contactForm.message) }}

        <div class="d-flex justify-content-between">
            <div class="d-flex gap-2">
                <button class="btn btn btn-outline-primary" type="submit">
                    Submit
                </button>
                {{ form_row(contactForm.alreadyClient) }}
            </div>
        </div>

        {{ form_end(contactForm) }}
    </div>
{% endblock %}
