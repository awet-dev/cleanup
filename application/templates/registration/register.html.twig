{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="container my-5 w-50 border rounded p-5">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <legend class="d-flex justify-content-center align-items-center gap-2 mb-3">
            <i class="fa-solid fa-hand-sparkles"></i>
            <span>Register</span>
        </legend>

        {{ form_start(registrationForm) }}
        {{ form_errors(registrationForm) }}

        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}

        <div class="d-flex justify-content-between">
            <div class="d-flex gap-2">
                <button class="btn btn btn-outline-primary" type="submit">
                    Register
                </button>
                {{ form_row(registrationForm.agreeTerms) }}
            </div>

            <a href="{{ path('app_login') }}" class="align-self-end">Already have account</a>
        </div>

        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
